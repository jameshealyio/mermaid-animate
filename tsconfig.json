{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist-types",
    "rootDir": "src",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "types": [],
    "lib": ["ES2020", "DOM" ],
    "jsx": "react-jsx",
    "sourceMap": true
  },
  "include": ["src"]
}
